{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["tsconfig-paths-bootstrap.js"],
  "files": ["./src/common/global.d.ts"]
}
